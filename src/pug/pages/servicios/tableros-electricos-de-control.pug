extends /config/template
append config
  -pageTitle = 'Tableros Electrónicos de Control'
  -pageDescription = 'Nos encargamos del montaje y mantenimiento asi como la construcción de tableros de control para cualquier tipo de ambiente.'
  -ogTitle = 'Tableros Electrónicos de Control | Elgeza'
  -ogUrl = 'https://elgeza.com/servicios/tableros-electricos-de-control.html'
  -ogImageUrl = 'https://elgeza.com/assets/img/seo/tableros.jpg'
  -ogImageAlt = 'Tableros Electrónicos de Control | Elgeza'

block main
  script(type="application/ld+json").
    {
      "@context": "http://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Elgeza",
        "item": "https://elgeza.com/"
      },{
        "@type": "ListItem",
        "position": 2,
        "name": "Servicios",
        "item": "https://elgeza.com/servicios.html"
      },{
        "@type": "ListItem",
        "position": 3,
        "name": "Tableros Electrónicos de Control",
        "item": "https://elgeza.com/servicios/tableros-electricos-de-control.html"
      }]
    }
  +bannerAltern('/assets/img/tableros-banner.jpg', 'Tableros Eléctricos de')
  main.service
    .service-container
      h3.service__title Control
      p.service__description Realizamos la construcción y mantenimiento de tableros eléctricos de control en Trujillo. Garantizamos la seguridad bajo las normas que se han establecido. Protegemos los equipos de las condiciones ambientales o propias del proceso de producción.
    .service-images
      h3.service-images__title Equipo técnico profesional altamente capacitado para ofrecerte un servicio de caldidad
      +imagesService('/assets/img/tableros-1.jpg', 'Tableros electrónicos de control', 'Tableros electrónicos de control')
      +imagesService('/assets/img/tableros-2.jpg', 'Tableros electrónicos de control', 'Tableros electrónicos de control')
      +imagesService('/assets/img/tableros-3.jpg', 'Tableros electrónicos de control', 'Tableros electrónicos de control')
      +imagesService('/assets/img/tableros-4.jpg', 'Tableros electrónicos de control', 'Tableros electrónicos de control')
  section.contact-us(style='--bg-image: url(/assets/img/tableros-contact.jpg);')
    .contact-us-container
      p.contact-us__description Solicita este servicio y nos pondremos en contacto contigo
      a.button.button--yellow(href="/contacto.html") Contáctanos Ahora
  include /includes/map
